<div class="container">

<h1 class="center"> Sign-Up </h1>
<p style="border-bottom:1px solid #212121;padding-bottom:12px;"></p>
<% if flash.has?(:message) %>
  <font size="+2" class="center"><%= flash[:message] %><br></br></font>
<% end %>

<div class="small_box">
<form method="POST" action="/signup">
<h3 class="center">Username: <input type="text" name="username" placeholder="Username"></h3>
<h3 class="center">Password: <input type="password" name="password" placeholder="Password"></h3>
<h3 class="center">Email: <input type="text" name="email" placeholder="Email Address"></h3>
<input id="sign-up" type="submit" name="Sign-Up" value="Sign-Up">
</form>
</div>


</div>
