<h2><div class="boxed">Edit Workout: <%=@workout.date%></div></h2>

<table border="3" cellpadding="5" style="width:20em">
  <caption><font size="+2"><%=@workout.name%> </font></caption>
  <tr>
    <th>Exercises Completed</th>
    <th>Bodypart</th>
  </tr>
<% @workout.workout_exercises.each do |exercise| %>
  <tr>
    <td align="center"><%= Exercise.find(exercise.exercise_id).name%></td>
    <td align="center"><%= Exercise.find(exercise.exercise_id).bodypart%></td>
  </tr>
  <tr>
  <%end%>
</table><br></br>

<font size="+2">Notes:</font>
<ul><%=@workout.notes%></ul><br></br>

<strong>========================================== </strong><br></br>

<form method="POST" action="/workouts/<%=@workout.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
<font size="+2">Workout Date:</font> <input type="text" name="workout[date]" placeholder="YYYY-MM-DD"><br></br>
<font size="+2">Notes:</font><ul><textarea name="workout[notes]" rows="5" cols="40" placeholder="Edit Notes..."></textarea></ul>
<font size="+2">Add/Remove Exercises:</font><br></br>
<%Exercise.all.each do |exercise|%>
  <input type="checkbox" name="workout[exercise_ids][]" value="<%=exercise.id%>" <%='checked' if @workout.exercises.include?(exercise) %>><%=exercise.name%><br></input>
  <%end%><br></br>
<input type="submit" name="Edit" value="Edit">
</form>
